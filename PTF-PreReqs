#/usr/bin/bash							  #

#-----------------------------------------------------------------#
# This file contains dependencies and additional software	  #
# installs for PTF 2.4.1 based on a minimal Ubuntu 19.04 install  #
# This installer assumes install to occur in ~/ptf-prep		  #
#-----------------------------------------------------------------#
cd ~
mkdir ptf-prep
cd ~/ptf-prep

#-----------------------------------------------------------------#
# Install some base dependencies via APT			  #
#-----------------------------------------------------------------#
apt-get update
apt-get install python3-pip python-pip autotools-dev curl vim libmicrohttpd-dev make cmake libusb-1.0 libprotobuf-c1 protobuf-c-compiler uuid uuid-dev libxml-libxml-perl libxml2 libxml2-dev
apt install automake
apt install autoconf
apt install m4
apt install perl
apt install libtool
pip3 install setuptools

#-----------------------------------------------------------------#
# Installing protobuf						  #
#-----------------------------------------------------------------#
cd ~/ptf-prep
git clone https://github.com/google/protobuf.git
cd protobuf
git submodule update --init --recursive
./autogen.sh
./configure
make
make check
make install
ldconfig


#-----------------------------------------------------------------#
# Installing libtins						  #
#-----------------------------------------------------------------#
cd ~/ptf-prep
git clone https://github.com/mfontanini/libtins
cd libtins
mkdir build
cd build
cmake ../ -DLIBTINS_BUILD_SHARED=0
make install
ldconfig

#-----------------------------------------------------------------#
# Installing gvm-libs						  #
#-----------------------------------------------------------------#
cd ~/ptf-prep
git clone https://github.com/greenbone/gvm-libs
cd gvm-libs
mkdir build
cd build
cmake ..
make install
ldconfig

#-----------------------------------------------------------------#
# Installing hiredis						  #
#-----------------------------------------------------------------#
cd ~/ptf-prep
git clone https://github.com/redis/hiredis.git
cd hiredis
make
make check
make install
ldconfig


